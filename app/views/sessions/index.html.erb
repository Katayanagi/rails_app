<h1>TL一覧</h1>

<% @tweets.each do |tweet| %>
  <p><%= link_to image_tag(tweet.user.profile_image_url_https) %>
  <%= tweet.user.name %>
  <%= tweet.user.screen_name %><%= tweet.user.id %></p>
  <p><%= tweet.created_at %></p>
  <p><%= tweet.text %></p>
  <% if tweet.media? %>
    <% tweet.media.each do |media| %>
      <%= image_tag(media.media_url_https) %>
    <% end %>
  <% end %>
  <% end %>